<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF6FF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ticker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#F00"
        android:clickable="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="5dp"
        android:singleLine="true"
        android:onClick="onTicker"
        android:text="Welcome to Professional Academcy CA Classes Android Application"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ticker"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/logo"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:onClick="onTimeTable"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_menu_today" >
                </ImageView>

                <TextView
                    android:id="@+id/txttimetable"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:focusable="false"
                    android:gravity="bottom|center_horizontal"
                    android:paddingBottom="15dp"
                    android:text="Time Table"
                    android:textColor="#FFFFFF"
                    android:textSize="21sp"
                    android:textStyle="bold" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:onClick="onPostQuery"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView04"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_menu_help" >
                </ImageView>

                <TextView
                    android:id="@+id/txthelp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:focusable="false"
                    android:gravity="bottom|center_horizontal"
                    android:paddingBottom="15dp"
                    android:text="Post Query"
                    android:textColor="#FFFFFF"
                    android:textSize="21sp"
                    android:textStyle="bold" >
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:onClick="onNotification"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_menu_myplaces" >
                </ImageView>

                <TextView
                    android:id="@+id/txtnotification"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:focusable="false"
                    android:gravity="bottom|center_horizontal"
                    android:paddingBottom="15dp"
                    android:text="Notification"
                    android:textColor="#FFFFFF"
                    android:textSize="21sp"
                    android:textStyle="bold" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="onSetUp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView03"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_menu_manage" >
                </ImageView>

                <TextView
                    android:id="@+id/txtsetup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:focusable="false"
                    android:gravity="bottom|center_horizontal"
                    android:paddingBottom="15dp"
                    android:text="Set up"
                    android:textColor="#FFFFFF"
                    android:textSize="21sp"
                    android:textStyle="bold" >
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>