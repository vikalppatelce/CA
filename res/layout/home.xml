<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity" >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/buttonPanel"
        app:fillColor="#88FF0000"
        app:pageColor="#FF888888"
        app:radius="5dp"
        app:strokeColor="#FF000000"
        app:strokeWidth="1dp"
         />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/ticker"
        android:id="@id/buttonPanel"
        >
        <Button 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:drawableLeft="@android:drawable/ic_menu_today"
            style="@style/IgRedButtonStyle"
            android:onClick="onTimeTable"
            android:textSize="18sp"
            android:text="@string/timetable"
            />
        <Button 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            style="@style/IgRedButtonStyle"
            android:drawableLeft="@android:drawable/ic_menu_help"
            android:layout_marginLeft="5dp"
            android:onClick="onPostQuery"
            android:layout_marginRight="10dp"
            android:text="@string/postquery"
            />
    </LinearLayout>
    
    <TextView
        android:id="@+id/ticker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:layout_above="@+id/pager"
        android:layout_marginTop="90dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_alignParentBottom="true"
        android:singleLine="true"
        android:text="@string/hello_world"
        android:textSize="15sp" />
</RelativeLayout>
