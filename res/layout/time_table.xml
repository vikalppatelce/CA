<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E4E2"
     >

    <LinearLayout
        android:id="@+id/txtTimeTable2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:background="@drawable/shape_card"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/timetable1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Time Table For Batch"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/timetable2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="dated on 01-01-14"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/next"
            style="@style/IgRedButtonStyleLarge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_margin="10dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="@string/next"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/txtTimeTable2"
        android:layout_margin="10dp"
         />

    <ListView
        android:id="@+id/timetable_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp" />

</RelativeLayout>